{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": { "ecmaVersion": 2020, "sourceType": "module" },
  "rules": {
    "no-var": "error",
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-multi-spaces": "error",
    "space-in-parens": ["error", "never"],
    "prefer-const": "error"
  }
}
